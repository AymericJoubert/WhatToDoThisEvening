{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <button id="location_autosearch">Me Trouver</button>
            <br/><br/>
            ou
            <br/><br/>
            <form id="baseForm" action="search">
                Entrer mon adresse
                <input id="autocomplete" class="address_input" placeholder="Enter your address" onFocus="geolocate()" type="text" name="city" />
                <input type="hidden" class="hidden_lat" value="" name="lat" />
                <input type="hidden" class="hidden_lng" value="" name="lng" />
                <input type="submit" class="submit_form" value="Go" />
            </form>

        </div>
    </div>

    Read the documentation to learn
    <a href="http://symfony.com/doc/{{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION')[:3] }}/book/page_creation.html">
        How to create your first page in Symfony
    </a>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/appBundle/javascript/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/appBundle/javascript/jquery-ui.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/appBundle/javascript/script.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/appBundle/javascript/gmaps.js') }}"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCPlHfWf1sDqyE-22yytWrLcS7yykgDgco&signed_in=true&libraries=places&callback=initAutocomplete" async defer></script>
{% endblock %}
